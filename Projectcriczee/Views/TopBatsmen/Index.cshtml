@model IEnumerable<Projectcriczee.TopBatsmen>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Player)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Innings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Runs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Player)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Innings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Runs)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Player">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Player">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Player">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
